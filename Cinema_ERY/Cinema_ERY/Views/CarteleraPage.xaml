<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Cinema_ERY.Views.CarteleraPage"
             Title="Cartelera">

    <ListView  x:Name="listPeliculas" ItemSelected="PeliculaSelected">
        <ListView.ItemTemplate>
            <DataTemplate>
                   
                <ImageCell ImageSource="{Binding Imagen}"
                    Text="{Binding Nombre}"
                    Detail="{Binding FechaEstreno}"/>
                

            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</ContentPage>